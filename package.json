{
  "name": "auditmark",
  "displayName": "AuditMark",
  "description": "A tool to mark selected pieces of code",
  "publisher": "sintemal",
  "version": "0.0.1",
  "icon": "https://i.ibb.co/k2m1HKZ/pencil-2998243-1280.png",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": ["mark", "audit", "selection"],
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auditmark.mark",
        "title": "Mark selection"
      },
      {
        "command": "auditmark.unmark",
        "title": "Unmark selection"
      },
      {
        "command": "auditmark.markfile",
        "title": "Mark file"
      },
      {
        "command": "auditmark.unmarkfile",
        "title": "Unmark file"
      },
      {
        "command": "auditmark.unmarkworkspace",
        "title": "Unmark workspace"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "auditmark.mark",
          "group": "1_modification"
        },
        {
          "when": "editorHasSelection",
          "command": "auditmark.unmark",
          "group": "1_modification"
        },
        {
          "command": "auditmark.markfile",
          "group": "1_modification"
        },
        {
          "command": "auditmark.unmarkfile",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "auditmark.mark",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorHasSelection"
      },
      {
        "command": "auditmark.markfile",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "!editorHasSelection"
      },
      {
        "command": "auditmark.unmark",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u",
        "when": "editorHasSelection"
      },
      {
        "command": "auditmark.unmarkfile",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u",
        "when": "!editorHasSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/diff": "^5.0.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.20.14",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "text-encoding": "^0.7.0"
  }
}
